

<form method="post" asp-controller="Product" asp-action="SaveProduct">
  <div class="form-group">
    <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" name="ClothingProduct.Name">
  </div>
  <div class="form-group">
    <label for="price">Price:</label>
        <input type="number" class="form-control" id="price" name="ClothingProduct.Price" step="0.01">
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
        <textarea class="form-control" id="description" name="ClothingProduct.Description"></textarea>
  </div>
  <div class="form-group">
    <label for="quantity">Quantity:</label>
        <input type="number" class="form-control" id="quantity" name="ClothingProduct.Quantity">
  </div>
  <div class="form-group">
    <label for="size">Size:</label>
        <input type="text" class="form-control" id="size" name="ClothingProduct.Size">
  </div>
  <div class="form-group">
    <label for="color">Color:</label>
        <input type="text" class="form-control" id="color" name="ClothingProduct.Color">
  </div>
  <div class="form-group">
    <label for="material">Material:</label>
        <input type="text" class="form-control" id="material" name="ClothingProduct.Material">
  </div>
  <button type="submit" class="btn btn-primary">Add Product</button>
  <br />
</form>
